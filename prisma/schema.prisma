generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN_TIC
  ANALISTA_SOC
  RESPONSABLE_RIESGO
  AUDITOR_INTERNO
  DIRECTIVO
}

enum ClassificationLevel {
  PUBLICA
  USO_INTERNO
  RESTRINGIDA
}

enum AssetType {
  SERVIDOR
  APLICATIVO
  RED
  RADIO
  ESTACION
  SIG
  USUARIO
  OTRO
}

enum VulnerabilityStatus {
  ABIERTA
  MITIGADA
  ACEPTADA
}

enum IncidentSeverity {
  BAJA
  MEDIA
  ALTA
  CRITICA
}

enum ControlMaturity {
  INEXISTENTE
  INICIAL
  REPETIBLE
  DEFINIDO
  GESTIONADO
  OPTIMIZADO
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  fullName  String?
  role      UserRole @default(RESPONSABLE_RIESGO)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assetsOwned Asset[]
  auditLogs   AuditLog[]
  notifications Notification[]

  @@map("users")
}

model Notification {
  id        String   @id @default(uuid())
  title     String
  message   String
  type      String   @default("INFO") // INFO, WARNING, CRITICAL
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model Asset {
  id              String              @id @default(uuid())
  name            String
  description     String?
  type            AssetType
  criticality     Int
  confidentiality Int
  integrity       Int
  availability    Int
  classification  ClassificationLevel @default(USO_INTERNO)
  
  ownerId         String?
  owner           User?               @relation(fields: [ownerId], references: [id])
  
  location        String?
  
  // Risk metrics
  inherentRisk    Float    @default(0)
  residualRisk    Float    @default(0)
  avgEffectiveness Float    @default(0)
  riskLevel       String   @default("BAJO")

  vulnerabilities Vulnerability[]
  incidents       Incident[]
  controls        AssetControl[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("assets")
}

model Vulnerability {
  id                 String              @id @default(uuid())
  cve                String?
  description        String
  severity           Float?
  status             VulnerabilityStatus @default(ABIERTA)
  detectedAt         DateTime            @default(now())
  mitigationDeadline DateTime?
  mitigatedAt        DateTime?

  assetId String
  asset   Asset  @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@map("vulnerabilities")
}

model Incident {
  id          String           @id @default(uuid())
  title       String
  description String?
  severity    IncidentSeverity
  status      String           @default("OPEN")
  rootCause   String?
  detectedAt  DateTime         @default(now())

  assetId String?
  asset   Asset?  @relation(fields: [assetId], references: [id])

  @@map("incidents")
}

model Control {
  id          String   @id @default(uuid())
  code        String   @unique
  name        String
  description String?
  framework   String   @default("ISO27001")
  category    String?  // Organizational, Technological, etc.

  assetEvaluations AssetControl[]
  requirements     ControlRequirement[]

  @@map("controls")
}

model Framework {
  id          String   @id @default(uuid())
  name        String   // e.g. "ISO 27001:2022"
  description String?
  
  requirements Requirement[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("frameworks")
}

model Requirement {
  id          String   @id @default(uuid())
  code        String   // e.g. "5.1"
  description String
  
  frameworkId String
  framework   Framework @relation(fields: [frameworkId], references: [id], onDelete: Cascade)
  
  controls    ControlRequirement[]

  @@map("requirements")
}

model ControlRequirement {
  controlId     String
  requirementId String
  
  control       Control     @relation(fields: [controlId], references: [id], onDelete: Cascade)
  requirement   Requirement @relation(fields: [requirementId], references: [id], onDelete: Cascade)

  @@id([controlId, requirementId])
  @@map("control_requirements")
}

model AssetControl {
  id              String          @id @default(uuid())
  assetId         String
  controlId       String
  maturity        ControlMaturity @default(INICIAL)
  effectiveness   Float
  evaluatedAt     DateTime        @default(now())
  nextEvaluationAt DateTime?
  evidence        String?
  comments        String?

  asset   Asset   @relation(fields: [assetId], references: [id], onDelete: Cascade)
  control Control @relation(fields: [controlId], references: [id], onDelete: Cascade)

  @@unique([assetId, controlId])
  @@map("asset_controls")
}

model AuditLog {
  id         String   @id @default(uuid())
  action     String
  entityType String
  entityId   String?
  details    Json?
  createdAt  DateTime @default(now())

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}

model RiskSnapshot {
  id              String   @id @default(uuid())
  date            DateTime @default(now()) // Se usar√° solo la parte de fecha
  averageRisk     Float
  openIncidents   Int
  criticalAssets  Int

  createdAt       DateTime @default(now())
  
  @@map("risk_snapshots")
}

model SystemSettings {
  id              String   @id @default(uuid())
  companyName     String   @default("Mi Empresa SAS")
  nit             String?
  logoUrl         String?
  
  // Risk Thresholds (JSON para flexibilidad)
  // Estructura esperada: { low: 1.5, medium: 3.5, high: 4.5 }
  riskThresholds  Json?

  updatedAt       DateTime @updatedAt

  @@map("system_settings")
}
